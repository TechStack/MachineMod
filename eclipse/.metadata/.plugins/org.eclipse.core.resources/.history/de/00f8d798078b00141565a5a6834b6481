package com.projectreddog.machinemod.configuration;

import java.io.File;

import com.projectreddog.machinemod.utility.LogHelper;
import com.typesafe.config.ConfigValue;

import net.minecraftforge.common.config.Configuration;

public class ConfigurationHandler {
	
public	boolean enableBulldozer;

	public static void init(File configFile)
	{

		// do everything related to loading the config etc..
		Configuration configuration = new Configuration(configFile);
		
		try
		{
			configuration.load();
			//read the properties here
			 enableBulldozer = configuration.get(Configuration.CATEGORY_GENERAL,"enableBulldozer" , true,"If true Bulldozer Enabled, if false BullDozer is disabled").getBoolean();
					
		}
		catch (Exception e)
		{
			LogHelper.debug("Error in Config Load error to follow:");
			LogHelper.error(e);
			
		}
		finally
		{
			//save the config if it did not exits
			configuration.save();
		}
	}
}
